@model IndexEventModel

<div>
    <div class="card mb-3">
        <div id="fixpic" style="margin: 50px;">
            <img class="card-img-top" src="@Model.ImageUrl" alt="...">
            <div class="card-body">
                <h4 class="card-title">@Model.Title</h4>
                <h6>Кратко представяне: @Model.BriefIntroduction</h6>

                <h6 class="card-text">Започва: <b>@Model.StartDate</b> Свършва: <b>@Model.EndDate</b>  </h6>
                <h6 class="card-text"><small class="text-muted">Организатор: @Model.OrganizerName</small></h6>
                <br />
                <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.Id"
                   class="btn btn-success">Details</a>
                @if (this.User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Event" asp-action="Edit" asp-route-id="@Model.Id"
                       class="btn btn-warning">Edit</a>
                    <a asp-controller="Event" asp-action="Delete" asp-route-id="@Model.Id"
                       class="btn btn-danger">Delete</a>
                    <p></p>
                }
            </div>
        </div>
    </div>
</div>
