@inject IAuthorService authorService;
@inject IOrganizerService organizerService;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LetsGoOutside</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LetsGoOutside.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" id="page-container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Хайде да излезем навън!</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="All">Статии</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="All">Събития</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <button class="dropbtn">
                                    Моето съдържание
                                    <i class="fade fa-caret-down"></i>
                                </button>
                                <div class="dropdown-content">
                                    @if (await authorService.ExistsByIdAsync(User.Id()))
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="Mine">Моите статии</a>
                                    }
                                    @if (await organizerService.ExistsByIdAsync(User.Id()))
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="Mine">Моите събития</a>
                                    }
                                </div>
                            </div>
                            <div class="dropdown">
                                <button class="dropbtn">
                                    Добави
                                    <i class="fade fa-caret-down"></i>
                                </button>
                                <div class="dropdown-content">
                                    @if (await authorService.ExistsByIdAsync(User.Id()))
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="Add">Добави статия</a>
                                    }
                                    @if (await organizerService.ExistsByIdAsync(User.Id()))
                                    {
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="Add">Добави събитие</a>
                                    }
                                </div>
                            </div>
                        }
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">За нас</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="border-top footer text-muted" position="absolute">
        <div class="container">
            &copy; @DateTime.Now.Year - LetsGoOutside
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
