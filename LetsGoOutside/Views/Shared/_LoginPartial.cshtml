@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IAuthorService authorService
@inject IOrganizerService organizerService
@using System.Security.Claims
@using static LetsGoOutside.Core.Constants.AdministratorConstants;

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.FindByIdAsync(User.Id());
        @if (await UserManager.IsInRoleAsync(user, AdminRole))
        {
            <li class="nav-item">
                <a class="nav-link text-dark text-decoration-underline text-danger" asp-area="Admin" asp-controller="Home" asp-action="Dashboard"><b>За администратори</b></a>
            </li>
        }

        @if (await organizerService.ExistsByIdAsync(User.Id())==false)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Organizer" asp-action="Become">Стани организатор</a>
            </li>
        }
        @if (await authorService.ExistsByIdAsync(User.Id())==false)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Author" asp-action="Become">Стани автор</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Здравей, @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
